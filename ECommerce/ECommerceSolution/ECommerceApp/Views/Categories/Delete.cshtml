@model ECommerceApp.Core.Models.Category

@{
    ViewBag.Title = "Delete";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Delete</h2>
        <ol class="breadcrumb">
            <li>
                <a href="#">Home</a>
            </li>
            <li>
                <a href="#">Products</a>
            </li>
            <li class="active">
                <strong>Delete</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">

            <div class="ibox product-detail">

                <div class="ibox-content">

                    <div class="row">

                        <!-- ---------------------------------------------------------------------------------------------- -->
                        <div class="col-lg-12">

                            <div class="bg-danger p-xs b-r-sm">Are you sure you want to delete this?</div>

                            <h2 class="font-bold m-b-xs">
                                @Html.DisplayFor(model => model.CategoryName)
                            </h2>

                            <hr>

                            <h4>@Html.DisplayNameFor(model => model.Description)</h4>

                            <div class="small text-muted">
                                @Html.DisplayFor(model => model.Description)
                            </div>

                            <hr>

                            <div class="text-right">
                                <input type="submit" value="Delete" class="btn btn-xs btn-outline btn-danger" />
                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>

    }

</div>

@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline btn-warning" })
