@model MvcMedEntityFramework.Data.Address

@{
    var options = new AjaxOptions
    {
        HttpMethod = "POST",
        UpdateTargetId = "listOfAddresses",
        InsertionMode = InsertionMode.Replace,
        OnBegin = "showLoadingIndicator",
        OnComplete = "hideLoadingIndicator"
    };
}

<img id="loader" src="~/Content/ajax-loader.gif" style="display: none;" />

@using (Ajax.BeginForm("Create", options))
{
    @Html.EditorFor(x => x.StreetName)
    
    @Html.EditorFor(x => x.StreetNumber)
    
    <input type="submit" value="Lägg till address"/>
}